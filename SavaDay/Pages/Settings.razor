@page "/settings"

<h1>Settings</h1>

<p>
    Current increment settngs: @userIncrement.IncrementAmount <br />   
</p>
<br />

<form class="form-check-inline">
    <div class="form-group">
        <label for="start1">Increment:</label>

        <input type="number" class="form-control" id="increment" @bind="userIncrement.IncrementAmount" placeholder="0.01">
    </div>
    <br />
</form>
<br />

<button class="btn btn-primary" @onclick="Reset">Reset</button>
<br />

@code {
    public Increment userIncrement = new Increment();
    private double defaultIncrement = 0.01;

    private void Reset()
    {
        userIncrement.IncrementAmount = defaultIncrement;        
    }
}

